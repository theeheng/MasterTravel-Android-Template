<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:padding="15dp"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.mastercard.travel.view.TwoLinesTextView
            android:id="@+id/rating_average_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:firstLine="@string/detail_hotel_reviews_rating" />

        <ProgressBar
            android:id="@+id/rating_average_progress"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:max="10"
            android:progressDrawable="@drawable/progress_hotel_rating_bar" />

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/map_item_separator" />

        <com.mastercard.travel.view.TwoLinesTextView
            android:id="@+id/service_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:firstLine="@string/detail_hotel_reviews_service" />


        <ProgressBar
            android:id="@+id/service_rating"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:max="10"
            android:progressDrawable="@drawable/progress_hotel_rating_bar" />

        <com.mastercard.travel.view.TwoLinesTextView
            android:id="@+id/hotel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:firstLine="@string/detail_hotel_reviews_hotel" />

        <ProgressBar
            android:id="@+id/hotel_rating"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:max="10"
            android:progressDrawable="@drawable/progress_hotel_rating_bar" />

    </LinearLayout>

</ScrollView>