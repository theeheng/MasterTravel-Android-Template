<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sort_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingBottom="3dp"
        android:paddingTop="10dp"
        android:text="@string/hotel_filter_title"
        android:textColor="@color/sort_big_title"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/sort_titles" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/sort_separator" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sort_background"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/filter_industry_stars"
            android:textColor="@color/sort_titles" />

        <RadioGroup
            android:id="@+id/starsRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/anyStar"
                style="@style/radioButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Any" />

            <RadioButton
                android:id="@+id/oneStar"
                style="@style/radioButtonStyleWithStar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />

            <RadioButton
                android:id="@+id/twoStars"
                style="@style/radioButtonStyleWithStar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2" />

            <RadioButton
                android:id="@+id/threeStars"
                style="@style/radioButtonStyleWithStar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3" />

            <RadioButton
                android:id="@+id/fourStars"
                style="@style/radioButtonStyleWithStar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4" />

            <RadioButton
                android:id="@+id/fiveStars"
                style="@style/radioButtonStyleWithStar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5" />
        </RadioGroup>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/sort_separator" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/filter_price"
            android:textColor="@color/sort_titles" />

        <RadioGroup
            android:id="@+id/priceRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/anyPrice"
                style="@style/radioButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Any" />

            <RadioButton
                android:id="@+id/price1"
                style="@style/radioButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$" />

            <RadioButton
                android:id="@+id/price2"
                style="@style/radioButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$$" />

            <RadioButton
                android:id="@+id/price3"
                style="@style/radioButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$$$" />

        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/sort_separator" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/filter_propery_name"
            android:textColor="@color/sort_titles" />

        <EditText
            android:id="@+id/property_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@null"
            android:singleLine="true"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:id="@+id/airlines_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/sort_separator" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/filter_property_types"
                android:textColor="@color/sort_titles" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/sort_separator" />

        <Button
            android:id="@+id/doneFilter"
            style="@style/standartButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/standart_button_background"
            android:text="@string/apply" />
    </LinearLayout>
</LinearLayout>